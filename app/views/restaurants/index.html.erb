<h1>Welcome!</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<h2>Here are all the Restaurants</h2>


<ol>
  <% @restaurants.each do |restaurant| %>
      <a href=<%= restaurant_path(restaurant) %>><li><%= restaurant.name %></li></a>
  <% end %>
</ol>
