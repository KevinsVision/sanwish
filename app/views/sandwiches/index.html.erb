<h1> Here are all the sandwiches available to order: </h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<ol>
  <% @sandwiches.each do |sandwich| %>
      <a href= <%= sandwich_path(sandwich) %> ><br><li><%= sandwich.name %></li></a>
  <% end %>
</ol>