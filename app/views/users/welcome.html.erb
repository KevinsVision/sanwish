<h2>Please Sign In Here!</h2>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user, url: '/login' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :surname %>
  <%= f.text_field :surname %><br>
  <%= f.label :age %>
  <%= f.number_field :age %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :phone_number %>
  <input type="number" name="user[phone_number]" id="user_phone_number">

  <%= f.submit "Sign In!" %><br>
<% end %>