<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :surname %>
  <%= f.text_field :surname %><br>
  <%= f.label :age %>
  <%= f.number_field :age %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %><br>
  <%= f.submit "#{action} User!" %><br>
<% end %>
